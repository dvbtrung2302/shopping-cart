html
  head
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.px-5
      a.navbar-brand(href='/') BRAND
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse.justify-content-end
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='#')
              i.fas.fa-shopping-cart
              span Shopping Cart
          if user
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                i.fas.fa-user
                span=user.name
              .dropdown-menu(aria-labelledby='navbarDropdown', style="left:unset;right:0")
                a.dropdown-item(href='/user') User Account
                .dropdown-divider
                a.dropdown-item(href='/user/signin') Log out
          else
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                i.fas.fa-user
                span User
              .dropdown-menu(aria-labelledby='navbarDropdown', style="left:unset;right:0")
                a.dropdown-item(href='/user/signin') Sign In
                .dropdown-divider
                a.dropdown-item(href='/user/signup') Sign Up

    .container
      block content
      block scripts
        script(src="https://kit.fontawesome.com/0433a56163.js", crossorigin="anonymous")
        script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js")

