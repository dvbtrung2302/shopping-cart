extends ../layouts/common.pug

block content
  h1 Sign Up
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action="/user/signup", method="POST")
    input(type="hidden", name="_csrf", value=csrfToken)
    .form-group
      label(for="name") Name
      input.form-control#name(name="name", type="text", value=values ? values.name : "")

    .form-group
      label(for="phone") Phone
      input.form-control#phone(name="phone", type="text", value=values ? values.phone : "")

    .form-group
      label(for="email") Email
      input.form-control#email(name="email", type="text", value=values ? values.email : "")

    .form-group
      label(for="password") Password
      input.form-control#password(name="password", type="password", value=values ? values.password : "")

    button.btn.btn-primary Create
