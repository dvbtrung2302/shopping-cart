extends ../layouts/common.pug

block content
  h1 User Profile
  table.table
    thead
      tr
        th(scope='col') Name
        th(scope='col') Phone
        th(scope='col') Email
    tbody
      tr
        td= user.name
        td= user.phone
        td= user.email

  h1 My Orders
  for order in orders
    .card.mb-5
      .card-body
        ul.list-group
          each item in order.cart
            li.list-group-item.d-flex.justify-content-between.align-items-center
              span= item.productName + ' | ' + item.quantity + ' Units'
              span.badge.badge-secondary.badge-pill= item.productPrice
      .card-footer 
        strong= 'Total Price: $' + order.total